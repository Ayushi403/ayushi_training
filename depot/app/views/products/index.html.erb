       <br />
       <%= link_to 'New Category', new_category_path %>
       <br />
       
    </div>
    <div class="floatleft">
       <h1>Listing products</h1>
       <table id="product_list">
        <% @products.each do |product| %>

        <%= render 'index', :product =>product %>
        <% end %>
    </table>  
     </div>      
</div>
<div style="clear:both"></div>
</html>




