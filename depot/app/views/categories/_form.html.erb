<%#= form_for(@category) do |f| %>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<%= nested_form_for @category ,remote: true do |f| %>
<%#= form_for(@category, :html => {:multipart => true}) do |f| %>
<div id = "error_msg">
</div>

<div class="field">
  <%= f.label :category%><br />
  <%= f.text_field :name %>
</div>
<br />
<div class="field">
<% f.fields_for :sub_categories do |builder| %>
      <%= builder.label :subCategory%>
      <span id = "add_subcat"><%= builder.text_field :name %></span>
      <%= builder.link_to_remove "Remove subCategory" %>
  <% end %>
  <p><%= f.link_to_add "Add subCategory", :sub_categories %></p>
</div>

<div class="actions" id = 'submit_cat'>
  <%= f.submit %>
</div>
<% end %>


